html
    head 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/style.css">
    body

    nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
        a.logo-link(href='/')
            img.navbar-avatar(src='/images/logo.png', alt='avatar', class="rounded-circle")
        a.coders-tokyo.ml-2(href='/') Coders.Tokyo
        #navbarNavAltMarkup.collapse.navbar-collapse
            .navbar-nav
                a.nav-item.nav-link.active(href='../../../users').ml-4.pl-3.pr-3 Admin
                a.nav-item.nav-link(href='../../../rank').pl-3.pr-3 Rank
                a.nav-item.nav-link(href='../../../stream').pl-3.pr-3 Stream
                a.nav-item.nav-link.closet(href='../../' + userId +'/books').pl-3.pr-3 Closet
                if user
                    a.nav-item.nav-link.user-name= user.name
                    img.user-logo(src='/images/logo.png', alt='avatar', class="rounded-circle")
                    //- img.user-logo(src=user.avatar, alt='avatar', class="rounded-circle")
            a.nav-item.nav-link.log-out(href='../logout').pl-3.pr-3 Log out
    .container.pt-4.main
        block content
            if errors
                each error in errors
                    .alert.alert-danger #{error}

            .form-input.border.p-4.rounded
                h1.text-center.mb-5 Edit book
                .row
                    .col-md-6
                        .card.border-success.mb-3(style='max-width: 30rem;').ml-2.mt-4
                          .card-header.bg-transparent.border-success Book detail
                          .card-body.text-success
                            p.card-title Book name: #{book.name}
                            p.card-text
                              | Book author: #{book.author}
                            p.cart-text
                                |Description: #{book.description}
                          .card-footer.bg-transparent.border-success Book detail

                    .col-md-6
                        form(method="POST")
                          .form-row
                            .form-group.col-md-6
                              label(for='name' require) Book Name
                              input#inputName.form-control(name='name', type='text', value= book? book.name : "", placeholder='New Book Name', style="width: 200%")
                          .form-row
                            .form-group.col-md-6
                              label(for='author') Author
                              input#author.form-control(name='author', type='text', value= book? book.author : "" require, style="width: 200%")
                          .form-row
                            .form-group.col-md-12
                                label(for='description') Description
                                textarea#description.form-control.z-depth-1(name="description" rows='3', placeholder='Write description for your book' value= book? book.description : "") #{book.description}
                            button#confirm.btn.btn-primary.mt-2.ml-1(type="submit") Change
